generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_DATABASE_URL")
}

model Organizations {
    name         String
    id           Int        @id @default(autoincrement())
    emailAddress String
    assets       Assets[]
    // contacts     Contacts[]
    expense      Expenses[]
    sales        Sales[]
}

model Assets {
    id             Int           @id @default(autoincrement())
    name           String
    imgUrl         String
    description    String        @db.Text()
    value          Int
    organization   Organizations @relation(fields: [organizationId], references: [id])
    organizationId Int
}

