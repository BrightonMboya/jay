model Trips {
    id            Int      @id @default(autoincrement())
    guestName     String
    email         String
    itienaryLink  String?
    bookedOn      DateTime
    dateOfArrival DateTime
    departureDate DateTime
    citizenship   String
    noOfDays      Int
    gender        String
    description   String?
}

model Expenses {
    id              Int            @id @default(autoincrement())
    amount          Int
    item            String
    Organizations   Organizations? @relation(fields: [organizationsId], references: [id])
    organizationsId Int
}

model Sales {
    id              Int            @id @default(autoincrement())
    amount          Int
    item            String
    Organizations   Organizations? @relation(fields: [organizationsId], references: [id])
    organizationsId Int?
}
