generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_DATABASE_URL")
}

model Organizations {
    name               String
    id                 Int            @id @default(autoincrement())
    emailAddress       String         @unique
    // organizations send emails to the customers, below is the email used
    communicationEmail String
    assets             Assets[]
    expense            Expenses[]
    sales              Sales[]
    trips              Trips[]
    emails             Emails[]
    itienaries         Itienaries[]
    destinations       Destination[]
    accomodations      Accomodation[]
    invoices           Invoices[]
}

model Assets {
    id             Int           @id @default(autoincrement())
    name           String
    imgUrl         String
    description    String
    value          Int
    organizationId Int
    organization   Organizations @relation(fields: [organizationId], references: [id])
}

model Trips {
    id              Int           @id @default(autoincrement())
    guestName       String
    email           String
    itienaryLink    String?
    bookedOn        DateTime
    dateOfArrival   DateTime
    departureDate   DateTime
    citizenship     String
    noOfDays        Int
    gender          String
    description     String?
    Organizations   Organizations @relation(fields: [organizationsId], references: [id])
    organizationsId Int
    // this trip has many expenses
    expenses        Expenses[]
}

model Expenses {
    id              String        @id @default(cuid())
    rackRateAmount  Int
    stockRateAmount Int
    expenseType     String
    expenseName     String
    date            DateTime
    description     String?
    paid            Boolean       @default(false)
    // for every expense recorded we also store the receipt, below is the link to the receipt
    receiptLink     String?
    organizationsId Int
    Organizations   Organizations @relation(fields: [organizationsId], references: [id])
    Trips           Trips         @relation(fields: [tripsId], references: [id])
    tripsId         Int
}

model Sales {
    id              String         @id @default(cuid())
    amount          Int
    salesType       String
    salesName       String
    date            DateTime
    description     String?
    receiptLink     String?
    organizationsId Int?
    Organizations   Organizations? @relation(fields: [organizationsId], references: [id])
}

model Emails {
    id             String         @id @default(cuid())
    name           String
    label          String
    // the emails are stored as txt files on supabase, below is the link to the file
    emailFileLink  String
    organizationId Int?
    Organization   Organizations? @relation(fields: [organizationId], references: [id])
}

model Itienaries {
    id             String          @id @default(cuid())
    guestName      String
    itienaryName   String
    numberOfDays   Int
    numberOfNights Int
    numberOfGuests Int
    description    String          @db.Text()
    pricePerPerson Int
    // each itienary has different days associated with it, we link the data below here
    dayManagement  DayManagement[]
    organizationId Int
    Organization   Organizations   @relation(fields: [organizationId], references: [id])
}

model DayManagement {
    id              String       @id @default(cuid())
    daySummary      String       @db.Text()
    pickUpLocation  String
    dropOffLocation String
    date            DateTime
    // each day is associated with an accomodation
    accomodation    Accomodation @relation(fields: [accomodationId], references: [id])
    // each day is associated with a destination as well
    destination     Destination  @relation(fields: [destinationId], references: [id])
    // below means each day belongs to a particular itienary
    itienaryId      String
    Itienary        Itienaries   @relation(fields: [itienaryId], references: [id])
    destinationId   String
    accomodationId  String
}

model Accomodation {
    id              String          @id @default(cuid())
    name            String
    description     String
    // each accomodation has imgs, we store them in supabase and below is their links
    imgUrls         String[]
    // each accomodation has many daysManagement
    DayManagement   DayManagement[]
    Organizations   Organizations   @relation(fields: [organizationsId], references: [id])
    organizationsId Int
}

// this destination below is connectd to the dayManagement
model Destination {
    id              String          @id @default(cuid())
    name            String
    description     String          @db.Text()
    // each destination also has imgs which we store them on supabase
    imgUrls         String[]
    DayManagement   DayManagement[]
    Organizations   Organizations   @relation(fields: [organizationsId], references: [id])
    organizationsId Int
}

model Invoices {
    id               String         @id @default(cuid())
    invoiceName      String
    tinNumber        String
    Date             DateTime
    companyAdress    String
    billingAdress    String
    clientName       String
    bankName         String
    bankCustomerName String
    accNo            String
    status           Boolean        @default(false)
    invoiceItems     InvoiceItems[]
    Organizations    Organizations  @relation(fields: [organizationsId], references: [id])
    organizationsId  Int
}

model InvoiceItems {
    id         String   @id @default(cuid())
    desc       String
    quantity   Int
    amount     Int
    Invoices   Invoices @relation(fields: [invoicesId], references: [id])
    invoicesId String
}


model BankDetails {
    id String @id @default(cuid())
    country String
    bankName String
    accountNumber String
    
}